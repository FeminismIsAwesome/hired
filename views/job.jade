html
  head
    title= title
    style
      include ../public/styles/job.css
    include ../public/header.html
  body
    .container 
      .row
        include ../public/menu_button.html
      .row
        include ../public/menu_list.html
      .selected_job
        .selected_job_title
          h2= job.title
          if job.favorite
            img(src='/resources/heart-icon.png')
          else
            img(src='/resources/black-heart-icon.png')
        br
        .job_description
          h3 Job Selection
          .pay #{job.pay} per hour
        br
        .job_candidate
          span Candidate
          span #{job.qualification}
        br
        .apply Apply
